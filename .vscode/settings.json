{
    "rewrap.autoWrap.enabled": true,
    "nixEnvSelector.nixFile": "${workspaceRoot}/shell.nix",
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^|%|\\\\)\\s*($TAGS)\\{*|^\\s*- \\[ \\])",
    "todo-tree.general.tags": [
      "TODO",
      "todo"
    ],
    "todo-tree.filtering.includeGlobs": [
      "**/*.tex"
    ],
    "latex-workshop.latex.recipes": [
      {
        "name": "latexmk ðŸ”ƒ",
